#include<regx52.h>
void delay(unsigned int);
void main()
{
while(1)
{
P1=0x3F;
delay(1000);
P1=0x06;
delay(1000);
P1=0x5B;
delay(1000);
P1=0x4F;
delay(1000);
P1=0x66;
delay(1000);
P1=0x6D;
delay(1000);
P1=0x7D;
delay(1000);
P1=0x07;
delay(1000);
P1=0x7F;
delay(1000);
P1=0x6F;
delay(1000);
}}
void delay(unsigned int a)
{
unsigned char i;
for(;a>0;a--)
{
for(i=250;i>0;i--);
}}
